# SPDX-License-Identifier: GPL-3.0-or-later
#

if [ -z ${CALLS_TCP_PORT} ] || [ -z ${CALLS_UDP_PORT} ]; then
    print "Port numbers for Calls plugin are not set. Calls might not work!" 1>&2
    exit 0
fi

# Set on the fly the calls settings

# we need to wait socket is up, we are limited by the timeout of odoo-app.service
podman exec -i odoo-app bash <<"EOF"
x=0
while ! [ -e /var/tmp/odoo_local.socket ]
do
    ((x=x+1))
    echo "waiting socket /var/tmp/odoo_local.socket : $x seconds"
    sleep 1
done

printf '{
    "PluginSettings": {
        "Plugins": {
            "com.odoo.calls": {
                "icehostoverride": "%s",
                "tcpserverport": %d,
                "udpserverport": %d,
                "defaultenabled": true
            }
        }
    }
}\n' "${TRAEFIK_HOST}" ${CALLS_TCP_PORT} ${CALLS_UDP_PORT} | mmctl --local config patch /dev/stdin
mmctl --local config reload
EOF
